
var CrazySheepLayer = cc.Layer.extend({
    ctor:function () {
        //////////////////////////////
        // 1. super init first
        this._super();
        var size = cc.director.getWinSize();        
        // add Bg
        
        var bgLayer = cc.Sprite.create(res.Bg_png);
        bgLayer.attr({
        	anchor : (0, 0),
        	x : size.width / 2,
        	y : size.height / 2
        });
        this.addChild(bgLayer);
        return true;
    }
});

var CrazySheepScene = cc.Scene.extend({
    onEnter:function () {
        this._super();
        var layer = new CrazySheepLayer();
        this.addChild(layer);
    }
});

